{
  "name": "primitiv-desktop-widget",
  "version": "1.0.22",
  "description": "Primitiv Desktop Widget",
  "author": "Primitiv Tools <humans@primitiv.tools>",
  "license": "MIT",
  "homepage": "https://github.com/Primitiv-Tools/primitiv-desktop-public",
  "repository": "Primitiv-Tools/primitiv-desktop-public",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist-win": "electron-builder --win",
    "dist-mac": "electron-builder --mac",
    "dist-linux": "electron-builder --linux",
    "dist-all": "electron-builder -mwl",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "electron-updater": "^6.1.7",
    "electron-log": "^5.0.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.primitiv.desktop",
    "productName": "Primitiv Desktop",
    "icon": "imgs/primitiv_logo.png",
    "publish": {
      "provider": "github",
      "owner": "Primitiv-Tools",
      "repo": "primitiv-desktop-public"
    },
    "win": {
      "target": "nsis",
      "icon": "imgs/primitiv_logo_256.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "imgs/primitiv_logo.png",
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist"
    },
    "linux": {
      "target": "AppImage",
      "icon": "imgs/primitiv_logo_256.png"
    }
  }
}